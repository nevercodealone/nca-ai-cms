---
import { db, SiteSettings, eq } from 'astro:db';
import Layout from '../layouts/Layout.astro';
import { renderMarkdown } from '../utils/markdown';

// Load impressum content from database (single markdown field)
const result = await db
  .select()
  .from(SiteSettings)
  .where(eq(SiteSettings.key, 'imprint_content'))
  .get();
const imprintMarkdown = result?.value ?? '';
const imprintHtml = await renderMarkdown(imprintMarkdown);
---

<Layout
  title="Impressum - NCA AI CMS"
  description="Rechtliche Informationen zu NCA AI CMS. POC-Projekt von Never Code Alone für KI-gestütztes Content Marketing."
>
  <article class="static-page">
    <div class="container">
      <header class="page-header animate-fadeInUp">
        <h1>Impressum</h1>
      </header>
      <div class="page-content prose" set:html={imprintHtml} />
    </div>
  </article>
</Layout>

<style>
  .static-page {
    padding: var(--space-8) 0 var(--space-20);
  }

  .page-header {
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    font-family: var(--font-display);
    font-size: var(--text-5xl);
    font-weight: 700;
    letter-spacing: var(--tracking-tight);
    color: var(--color-text);
  }

  .page-content {
    max-width: var(--content-max);
  }

  .prose h2 {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-text);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .prose h2:first-child {
    margin-top: 0;
  }

  .prose p {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
  }

  .prose a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .prose a:hover {
    color: var(--color-primary-hover);
  }

  .prose strong {
    color: var(--color-text);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: var(--text-4xl);
    }

    .prose h2 {
      font-size: var(--text-xl);
    }

    .prose p {
      font-size: var(--text-base);
    }
  }
</style>
